{% block body %}
    <main class="main">
        <!-- Page Title -->
        <div class="page-title" data-aos="fade">
            <div class="heading">
                <div class="container">
                    <div class="row d-flex justify-content-center text-center">
                        <div class="col-lg-8">
                            <h1>Events</h1>
                            <!-- Nouvelle description avec un design moderne -->
                            <p class="mb-4 text-muted fs-5">
                                Educonnect organise des événements uniques dédiés à l'innovation et à l'éducation. Nos événements, allant des ateliers interactifs aux conférences inspirantes, visent à rassembler les étudiants, les professionnels et les experts pour échanger des idées, partager des expériences et développer des compétences dans des domaines clés. Rejoignez-nous pour explorer des solutions innovantes et avancer dans vos projets professionnels !
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <nav class="breadcrumbs">
                <div class="container">
                    <ol>
                        <li><a href="index.html">Home</a></li>
                        <li class="current">Events</li>
                    </ol>
                </div>
            </nav>
        </div><!-- End Page Title -->
        <!-- Categories Section -->
        <section id="categories" class="categories section">
            <div class="container" data-aos="fade-up">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-12">
                        <h2 class="text-center mb-4">Catégories</h2>
                        <div class="row">
                            {% for category in categories %}
                                <div class="col-md-3">
                                    <div class="card text-center p-3 shadow-sm">
                                        <h5 class="fw-bold">
                                            <a href="{{ path('app_event_index_front', {'category': category.id}) }}" class="{{ selectedCategoryId == category.id ? 'active' : '' }}">
                                                {{ category.name }}
                                            </a>
                                        </h5>
                                    </div>
                                </div>
                            {% else %}
                                <p class="text-center">Aucune catégorie disponible.</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- /Categories Section -->
        <!-- Search Form -->
        <section class="container my-4">
            <form method="GET" action="{{ path('app_event_index_front') }}" class="d-flex justify-content-center">
                <div class="input-group w-50 shadow-sm">
                    <input type="text" name="search" class="form-control" placeholder="Rechercher un événement..." value="{{ searchTerm }}">
                    <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i> Rechercher</button>
                </div>
            </form>
        </section>

        <!-- Events Section -->
        <section id="events" class="events section">
            <div class="container" data-aos="fade-up">
                <div class="row">
                    {% for event in events.items %}

                        <div class="col-md-6 d-flex align-items-stretch">
                            <div class="card">
                                <div class="card-img">
                                    {% if event.image %}
                                        <img src="{{ asset('uploads/' ~ event.image) }}" alt="Image de l'événement" class="img-fluid">
                                    {% else %}
                                        <img src="/assetsFront/assets/img/default-event.jpg" alt="Image par défaut" class="img-fluid">
                                    {% endif %}
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="{{ path('app_event_show', {'id': event.id}) }}">{{ event.titre }}</a>
                                    </h5>
                                    <p class="fst-italic text-center">
                                        {{ event.dateDebut|date('l, F jS \\a\\t H:i') }} - {{ event.dateFin|date('H:i') }}
                                    </p>

                                    <!-- Affichage de la catégorie de l'événement -->
                                    <p class="text-muted text-center">
                                        Catégorie : <strong>{{ event.category.name }}</strong>
                                    </p>

                                    <div class="buttons text-center">
                                        <a href="#" class="btn wishlist-btn"><i class="fa fa-heart" aria-hidden="true"></i></a>
                                        <a href="{{ path('app_event_show_front', {'id': event.id}) }}" class="btn details-btn">
                                            <i class="fa fa-info-circle" aria-hidden="true"></i> Détails
                                            <p class="text-muted text-center">Places restantes : <strong>{{ event.nombreMaxParticipants }}</strong></p>
                                            <div class="buttons text-center">
                                                {% if event.nombreMaxParticipants > 0 %}
                                                    <a href="{{ path('app_event_register', {'id': event.id}) }}" class="btn btn-primary">
                                                        <i class="bi bi-person-plus"></i> S'inscrire
                                                    </a>
                                                {% else %}
                                                    <button class="btn btn-secondary" disabled>Complet</button>
                                                {% endif %}
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <p class="text-center">Aucun événement disponible pour cette catégorie.</p>
                    {% endfor %}
                </div>
            </div>
        </section>
        <div>
            <p>Nombre total de pages : {{ events.pageCount }}</p>
            <p>Page actuelle : {{ events.currentPageNumber }}</p>
            <p>Nombre total d'éléments : {{ events.totalItemCount }}</p>
        </div>

        <!-- /Events Section -->
        <div class="pagination justify-content-center mt-4">
            {% if events.pageCount > 1 %}
                <nav aria-label="Event pagination">
                    <ul class="pagination">
                        {# Bouton "Précédent" #}
                        {% if events.currentPageNumber > 1 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_event_index_front', { category: selectedCategoryId, page: events.currentPageNumber - 1 }) }}">
                                    Previous
                                </a>
                            </li>
                        {% endif %}

                        {# Liens vers chaque page #}
                        {% for page in 1..events.pageCount %}
                            <li class="page-item {{ page == events.currentPageNumber ? 'active' : '' }}">
                                <a class="page-link" href="{{ path('app_event_index_front', { category: selectedCategoryId, page: page }) }}">
                                    {{ page }}
                                </a>
                            </li>
                        {% endfor %}

                        {# Bouton "Suivant" #}
                        {% if events.currentPageNumber < events.pageCount %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_event_index_front', { category: selectedCategoryId, page: events.currentPageNumber + 1 }) }}">
                                    Next
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            {% endif %}
        </div>

    </main>
{% endblock %}
