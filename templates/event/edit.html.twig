{% extends 'base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                        <h3 class="mb-0 fw-bold">Modifier l'Événement</h3>
                    </div>
                    <div class="card-body p-4">
                        {{ form_start(form) }}
                        <div class="row g-4">
                            <div class="col-md-6">
                                {{ form_label(form.titre, 'Titre de l\'événement', {'label_attr': {'class': 'fw-bold form-label'}}) }}
                                {{ form_widget(form.titre, {'attr': {'class': 'form-control form-control-lg rounded-3 shadow-sm', 'placeholder': 'Entrez le titre'}}) }}
                                {{ form_errors(form.titre) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.lieu, 'Lieu', {'label_attr': {'class': 'fw-bold form-label'}}) }}
                                {{ form_widget(form.lieu, {'attr': {'class': 'form-control form-control-lg rounded-3 shadow-sm', 'placeholder': 'Entrez le lieu'}}) }}
                                {{ form_errors(form.lieu) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.dateDebut, 'Date de début', {'label_attr': {'class': 'fw-bold form-label'}}) }}
                                {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control form-control-lg rounded-3 shadow-sm'}}) }}
                                {{ form_errors(form.dateDebut) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.dateFin, 'Date de fin', {'label_attr': {'class': 'fw-bold form-label'}}) }}
                                {{ form_widget(form.dateFin, {'attr': {'class': 'form-control form-control-lg rounded-3 shadow-sm'}}) }}
                                {{ form_errors(form.dateFin) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'fw-bold form-label'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control shadow-sm', 'rows': '4', 'placeholder': 'Entrez une description détaillée'}}) }}
                                {{ form_errors(form.description) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.duree, 'Durée (heures)', {'label_attr': {'class': 'fw-bold form-label'}}) }}
                                {{ form_widget(form.duree, {'attr': {'class': 'form-control form-control-lg rounded-3 shadow-sm', 'placeholder': 'Durée en heures'}}) }}
                                {{ form_errors(form.duree) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.nombreMaxParticipants, 'Participants max.', {'label_attr': {'class': 'fw-bold form-label'}}) }}
                                {{ form_widget(form.nombreMaxParticipants, {'attr': {'class': 'form-control form-control-lg rounded-3 shadow-sm', 'placeholder': 'Nombre max'}}) }}
                                {{ form_errors(form.nombreMaxParticipants) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_label(form.imageFile, 'Image de l\'événement', {'label_attr': {'class': 'fw-bold form-label'}}) }}
                                {{ form_widget(form.imageFile, {'attr': {'class': 'form-control shadow-sm'}}) }}
                                {{ form_errors(form.imageFile) }}
                            </div>
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg px-4 py-2 rounded-pill fw-bold shadow-sm">
                                {{ button_label|default('Mettre à jour') }}
                            </button>
                            <a href="{{ path('app_gestion_event') }}" class="btn btn-secondary btn-lg px-4 py-2 rounded-pill fw-bold shadow-sm">Retour</a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
