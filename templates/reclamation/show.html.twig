            <p><strong>Date de création :</strong> {{ reclamation.dateCreation ? reclamation.dateCreation|date('Y-m-d H:i:s') : '' }}</p>
          </div>
        </div>
        <div class="d-flex justify-content-between">
          <!-- Actions -->
          <a href="{{ path('app_reclamation_index') }}" class="btn btn-outline-primary btn-lg px-4 py-2" style="transition: 0.3s; border-radius: 25px;">
            <i class="bi bi-arrow-left"></i> Retour à la liste
          </a>
          <a href="{{ path('app_reclamation_edit', { id: reclamation.id }) }}" class="btn btn-outline-warning btn-lg px-4 py-2" style="transition: 0.3s; border-radius: 25px;">
            <i class="bi bi-pencil"></i> Modifier
          </a>
        </div>
      </div>
    </div>

    <!-- Formulaire de suppression -->
    {{ include('reclamation/_delete_form.html.twig') }}

    <!-- Section des Réponses -->
    <h3 class="mt-5 text-center">Réponses</h3>

    <div class="row">
      {% for reponse in reponses %}
        <div class="col-md-4 mb-3">
          <div class="card shadow-lg" style="border-radius: 15px;">
            <div class="card-body">
              <h5 class="card-title"><strong>Réponse #{{ reponse.id }}</strong></h5>
              <p><strong>Contenu :</strong> {{ reponse.contenu }}</p>
              <p><strong>Date de création :</strong> {{ reponse.dateCreation ? reponse.dateCreation|date('Y-m-d H:i:s') : '' }}</p>
              <div class="d-flex justify-content-between">
                <a href="{{ path('app_reponse_edit', { id: reponse.id }) }}" class="btn btn-warning btn-sm" style="border-radius: 25px;">
                  <i class="bi bi-pencil"></i> Modifier
                </a>
                <form action="{{ path('app_reponse_delete', { id: reponse.id }) }}" method="POST" style="display:inline;">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}" />
                  <button type="submit" class="btn btn-danger btn-sm" style="border-radius: 25px;">
                    <i class="bi bi-trash"></i> Supprimer
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      {% else %}
        <div class="col-12">
          <div class="card mb-4 shadow-lg" style="border-radius: 15px;">
            <div class="card-body text-center">
              <p>Aucune réponse trouvée.</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="text-center">
