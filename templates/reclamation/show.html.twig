    <!-- Carte de Réclamation -->
    <div class="card shadow-lg border-0 mb-4" style="border-radius: 15px;">
      <div class="card-header bg-gradient-to-right from-teal-500 to-green-500 text-white">
        <h5 class="mb-0">Réclamation #{{ reclamation.id }}</h5>
      </div>
      <div class="card-body">
