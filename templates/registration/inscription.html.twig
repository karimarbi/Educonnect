{% extends 'back_office/index.html.twig' %}

{% block title %}Inscription Utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Ajouter un Nouveau Utilisateur</h2>
            </div>
            <div class="card-body">
                {# Affichage des messages flash (succès / erreur) #}
                {% for message in app.flashes('danger') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.prenom) }}
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.prenom) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.cin) }}
                            {{ form_widget(form.cin, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.cin) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.age) }}
                            {{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.age) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.dateNai) }}
                            {{ form_widget(form.dateNai, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.dateNai) }}
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.adresse) }}
                            {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.adresse) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.lieu) }}
                            {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.lieu) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.email) }}
                            <div class="input-group">
                                <span class="input-group-text">@</span>
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.password) }}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.password) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.role) }}
                            {{ form_widget(form.role, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.role) }}
                        </div>
                    </div>
                </div>

                {# Affichage des champs spécifiques au formateur #}
                <div id="formateurFields" class="mt-4 p-3 border rounded" style="display: none; background: #f8f9fa;">
                    <h4>Informations pour les Formateurs</h4>
                    <div class="mb-3">
                        {{ form_label(form.specialite) }}
                        {{ form_widget(form.specialite, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.specialite) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.salaire) }}
                        {{ form_widget(form.salaire, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.salaire) }}
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button class="btn btn-success mt-3">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let roleField = document.querySelector("#{{ form.role.vars.id }}");
            let formateurFields = document.getElementById("formateurFields");

            function toggleFormateurFields() {
                if (roleField.value === "formateur") {
                    formateurFields.style.display = "block";
                } else {
                    formateurFields.style.display = "none";
                }
            }

            toggleFormateurFields(); // Vérification initiale
            roleField.addEventListener("change", toggleFormateurFields);
        });
    </script>
{% endblock %}
