
{% extends 'back_office/index.html.twig' %}

{% block title %}Détails du Cours{% endblock %}

{% block body %}
<section id="courses-course-details" class="courses-course-details section">
  <div class="container" data-aos="fade-up">
    <div class="row">
      <div class="col-lg-8">
        {# Afficher l'image du cours, si elle existe #}
        {% if cour.image %}
          <img src="{{ asset('img/' ~ cour.image) }}" class="img-fluid" alt="Image du Cours">
        {% else %}
          <img src="assets/img/course-details.jpg" class="img-fluid" alt="Image par défaut">
        {% endif %}
        
        <h3>{{ cour.titre }}</h3>
        <p>{{ cour.description }}</p>
        <p>{{ cour.contenu }}</p>
      </div>

      <div class="col-lg-4">
        <div class="course-info d-flex justify-content-between align-items-center">
          <h5>Formateur</h5>
          <p><a href="#">{{ cour.formateur ? cour.formateur : 'Non défini' }}</a></p>
        </div>

        <div class="course-info d-flex justify-content-between align-items-center">
          <h5>Catégorie</h5>
          <p>{{ cour.categorie }}</p>
        </div>

        {# <div class="course-info d-flex justify-content-between align-items-center">
          <h5>Coût du Cours</h5>
          <p>{{ cour.fee ? cour.fee : 'Non défini' }}</p>
        </div>

        <div class="course-info d-flex justify-content-between align-items-center">
          <h5>Places Disponibles</h5>
          <p>{{ cour.seatsAvailable ? cour.seatsAvailable : 'Non défini' }}</p>
        </div>

        <div class="course-info d-flex justify-content-between align-items-center">
          <h5>Horaire</h5>
          <p>{{ cour.schedule ? cour.schedule : 'Non défini' }}</p>
        </div> #}

        <div class="mt-3">
          <a href="{{ path('app_cours_index') }}" class="btn btn-secondary">Retour à la liste</a>
          <a href="{{ path('app_cours_edit', {'id': cour.id}) }}" class="btn btn-primary">Modifier</a>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
