{% extends 'base.html.twig' %}

{% block title %}Édition du Cours{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header" style="background-color: #464343; color: white; text-align: center; box-shadow: 0 4px 8px rgba(222,222,222,0.2);">
                    <h3 class="mb-0" style="font-family: 'Arial', sans-serif; font-weight: 600;">Édition du Cours</h3>
                </div>

                <div class="card-body">
                    {# Display flash messages for success or errors #}
                    {% for message in app.flashes('danger') %}
                        <div class="alert alert-danger">{{ message }}</div>
                    {% endfor %}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}

                    {{ form_start(form) }}
                    
                    {# Display global form errors #}
                    <div class="text-danger">
                        {{ form_errors(form) }}
                    </div>

                    {# Loop through the form fields and display them along with their errors #}
                    {% for field in form %}
                        {% if field.vars.name != '_token' %}
                            <div class="mb-3">
                                {{ form_label(field, null, {'label_attr': {'class': 'fw-bold form-label'}}) }}
                                {{ form_widget(field, {'attr': {'class': 'form-control rounded-pill shadow-sm'}}) }}
                                <div class="text-danger">
                                    {{ form_errors(field) }}
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}

                    <div class="text-center">
                        <button type="submit" class="btn btn-success px-4 py-2 rounded-pill shadow-sm">
                            {{ button_label|default('Mettre à jour') }}
                        </button>
                        <a href="{{ path('app_cours_index') }}" class="btn btn-secondary px-4 py-2 rounded-pill shadow-sm">Retour à la liste</a>
                    </div>

                    {{ form_end(form) }}

                    {# Include delete form if necessary #}
                    {{ include('cours/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
