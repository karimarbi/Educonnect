{% extends 'front_office/index.html.twig' %}

{% block title %}Cours index{% endblock %}

{% block body %}

    <section id="courses" class="courses section">
        <div class="container">
            <div class="row">
                {% for cour in cours %}
                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch mb-4" data-aos="zoom-in" data-aos-delay="100">
                        <div class="course-item">
                            <img src="{{ asset('img/' ~ cour.image) }}" class="img-fluid fixed-size-image" alt="{{ cour.titre }}">

                            <div class="course-content">
                                {# <div class="d-flex justify-content-between align-items-center mb-3">
                                    <p class="category">{{ cour.titre }}</p>
                                    <p class="price">{{ cour.prix | default('$0') }}</p>
                                </div> #}

                                <h3>
                                   {{ cour.description }}
                                </h3>
                                <p class="description">{{ cour.contenu }}</p>

                                <div class="trainer d-flex justify-content-between align-items-center">
                                    <div class="trainer-profile d-flex align-items-center">
                                        <img src="{{ asset('assets/img/trainers/trainer-1-2.jpg') }}" class="img-fluid" alt="">
                                        <a href="#" class="trainer-link">{{ cour.formateur.nom | default('zayed') }}</a>
                                    </div>
                                    <div class="trainer-rank d-flex align-items-center">
                                        <i class="bi bi-person user-icon"></i>&nbsp;50
                                        &nbsp;&nbsp;
                                        <i class="bi bi-heart heart-icon"></i>&nbsp;65
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Course Item-->
                {% else %}
                    <div class="col-12">
                        <p>No records found</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {# <div style="margin-left: 8%;">
        <a href="{{ path('app_cours_new') }}">Create new</a>
    </div> #}
{% endblock %}
