{% extends 'base.html.twig' %}
{% block title %}Edit Category{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-dark mb-4" style="font-size: 2.5rem; font-weight: 700;">Edit Category</h1>

        <!-- Form Start -->
        <div class="card shadow-lg border-0 rounded">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.name, 'Category Name', {'label_attr': {'class': 'fw-bold'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control rounded-pill shadow-sm', 'placeholder': 'Enter category name'}}) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-warning px-4 py-2 rounded-pill shadow-sm text-white">Update Category</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <!-- Form End -->

        <div class="mt-4 d-flex justify-content-between">
            <a href="{{ path('app_gestion_event') }}" class="btn btn-secondary text-white">
                <i class="material-symbols-rounded me-2">arrow_back</i> Back to List
            </a>
            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}