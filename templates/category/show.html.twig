{% extends 'back_office/index.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-dark mb-4" style="font-size: 2.5rem; font-weight: 700;">Category Details</h1>

        <div class="card shadow-lg border-0 rounded">
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <tbody>
                    <tr>
                        <th class="text-nowrap">Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th class="text-nowrap">Category Name</th>
                        <td>{{ category.name }}</td>
                    </tr>
                    </tbody>
                </table>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_gestion_event') }}" class="btn btn-secondary text-white">
                        <i class="material-symbols-rounded me-2">arrow_back</i> Back to List
                    </a>
                    <div class="d-flex">
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning text-white me-3">
                            <i class="material-symbols-rounded me-2">edit</i> Edit
                        </a>
                        {{ include('category/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
