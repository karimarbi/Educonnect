{% extends 'back_office/index.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-dark text-white text-center">
                    <h3 class="mb-0" style="font-family: 'Arial', sans-serif;">Categorie Details</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>ID</th>
                                <td>{{ categorie.id }}</td>
                            </tr>
                            <tr>
                                <th>Nom de la Categorie</th>
                                <td>{{ categorie.nomCategorie }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="d-flex justify-content-between mt-3">
                        <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">Back to List</a>
                        <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-primary">Edit</a>
                    </div>

                    <div class="text-center mt-4">
                        {{ include('categorie/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
